builds:
  - binary: diantre
    goos:
      - darwin
      - linux
    goarch:
      - amd64
      - arm64
    env:
      - CGO_ENABLED=0
    flags:
      - -mod=vendor

release:
  prerelease: auto

universal_binaries:
  - replace: true

brews:
  -
    name: diantre
    homepage: "https://github.com/mericozkayagan/homebrew-mericozkayagan"
    tap:
      owner: mericozkayagan
      name: homebrew-mericozkayagan
    commit_author:
      name: mericozkayagan
      email: mericozkayagan@gmail.com

checksum:
  name_template: 'checksums.txt'